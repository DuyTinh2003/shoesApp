<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/price_new_shoe"
        android:layout_width="65dp"
        android:layout_height="23dp"
        android:text="$849.69"
        android:textColor="#1A2530"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/name_new_shoe"
        app:layout_constraintTop_toBottomOf="@+id/name_new_shoe" />

    <TextView
        android:id="@+id/name_new_shoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nike Air Jordan"
        android:textColor="#1A2530"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="Best Choice"
        android:textColor="#5B9EE1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_new_shoe"
        android:layout_width="150dp"
        android:layout_height="146dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/spring_prev_ui1" />
</androidx.constraintlayout.widget.ConstraintLayout>